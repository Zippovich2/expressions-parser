{
    "name": "zippovich2/expressions-parser",
    "description": "Used shunting-yard algorithm to parse any expressions and RPN(Reverse Polish Notations) to execute it.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Skoropadsky",
            "email": "zipo.ckorop@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^2.18"
    },
    "autoload": {
        "psr-4": {
            "Zippovich2\\ExpressionsParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zippovich2\\ExpressionsParser\\Test\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --allow-risky=yes --diff --ansi --dry-run",
        "cs-fix": "php-cs-fixer fix --allow-risky=yes --diff --ansi",
        "tests": "phpunit --colors=always tests/"
    }
}
